<CREOLE-DIRECTORY>
  <!-- Language Resources -->
  <CREOLE>
    <!-- Annotation schema -->
    <RESOURCE>
      <NAME>Annotation schema</NAME>
      <CLASS>gate.creole.AnnotationSchema</CLASS>
      <COMMENT>The MPQA annotation scheme </COMMENT>
      <PARAMETER NAME="xmlFileUrl"
        COMMENT="The url to the definition file"
	SUFFIXES="xml;xsd">java.net.URL</PARAMETER>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/sentence.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/split.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/agent.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/direct-subjective.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/objective-speech.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/expressive-subjectivity.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/attitude.xml" />
      </AUTOINSTANCE>
      <AUTOINSTANCE>
          <PARAM NAME ="xmlFileUrl" VALUE ="mpqa-resources/schema/target.xml" />
      </AUTOINSTANCE>

    </RESOURCE>
